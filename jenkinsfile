pipeline {
    agent any
    environment {
        
        PATH = "PATH=$PATH:/usr/local/bin"
    }
    
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'brew update'
                sh 'brew install enchant'
                sh 'brew install libmagic'
                sh 'brew ls --versions enchant'
            }
        }
        stage('Build and Test') {
            steps {
                sh 'make'
                sh 'make test'
            }
        }
    }
}
